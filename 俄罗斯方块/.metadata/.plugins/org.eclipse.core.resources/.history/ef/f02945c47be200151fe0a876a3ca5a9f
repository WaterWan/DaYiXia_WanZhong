package water.eluosifangkuai.ui.window;

import java.awt.BorderLayout;
import java.awt.FlowLayout;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

import water.eluosifangkuai.util.FrameUtil;

public class JFrameSavePoint extends JFrame{
	
	private JLabel point;
	private JButton btnOk = null;
	
	public JFrameSavePoint(){
		this.setTitle("保存记录");
		this.setSize(256, 128);
		FrameUtil.setFrameCenter(this);
		this.setResizable(false);
		this.setLayout(new BorderLayout());
		this.createCom();
		// TODO 测试用
		this.setDefaultCloseOperation(3);
		this.setVisible(true);
	}
	
	private void createCom(){
		JPanel north = new JPanel(new FlowLayout(FlowLayout.LEFT)); 
		this.point = new JLabel("您的得分：1280");
		north.add(point);
		this.add(north, BorderLayout.NORTH);
		
		// 创建确定按钮
		this.btnOk = new JButton("确定");
		// 创建南部面板(流式布局)
		JPanel south = new JPanel(new FlowLayout(FlowLayout.CENTER));
		// 按钮添加到南部面板
		south.add(btnOk);
		// 南部面板添加到主面板
		this.add(south, BorderLayout.SOUTH);

	}
	
	public static void main(String[] args) {
		new JFrameSavePoint();
	}
}
