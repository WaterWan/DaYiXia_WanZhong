package water.eluosifangkuai.ui;

import java.awt.Graphics;

import javax.swing.JPanel;

public class PanelGame extends JPanel{

	
	private Lay[] lays=null;
	
	public PanelGame(){

		lays=new Lay[]{
				//硬编码是非常不好的开发习惯
				//我们要尽量将数字或者字符串定义成常量，或者写入配置文件。
				new Lay(40, 32, 334, 279),//前两个是左上角顶点坐标，后两个是大小
				new Lay(40, 343, 334, 279),
				new Lay(414, 32, 334, 590),
				new Lay(788, 32, 334,124)
		};
	}
	
	@Override
	public void paintComponent(Graphics g){

		//循环刷新游戏画面
		for(int i=0;i<lays.length;i++){
			//刷新层窗口
			lays[i].createWindow(g);
		}
	
	}
}


